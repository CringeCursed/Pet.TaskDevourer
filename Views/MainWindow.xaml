<Window x:Class="Pet.TaskDevourer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewModels="clr-namespace:Pet.TaskDevourer.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        Title="MainWindow" Height="450" Width="800">


    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#673ab7" Padding="12">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="TaskDevourer" FontSize="22" FontWeight="Bold" Foreground="White"/>
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Width="200" Margin="20 0 0 0" Padding="10,5" VerticalAlignment="Center" Background="White" materialDesign:HintAssist.Hint="Search..."/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="4" Padding="10" Margin="0,0,10,0" BorderThickness="1" BorderBrush="#E0E0E0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <RadioButton Content="All Tasks" IsChecked="{Binding SelectedFilter, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=All}" GroupName="Filter" Margin="0,0,10,0"/>
                        <RadioButton Content="Active" IsChecked="{Binding SelectedFilter, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Active}" GroupName="Filter" Margin="0,0,10,0" />
                        <RadioButton Content="Done" IsChecked="{Binding SelectedFilter, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Completed}" GroupName="Filter"/>
                    </StackPanel>

                    <ListView ItemsSource="{Binding FilteredTasks}" Grid.Row="1" BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10" Margin="0,5" Background="#FAFAFA" CornerRadius="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Grid.Column="0" FontSize="22" IsChecked="{Binding IsCompleted, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,15,0"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="DemiBold"/>
                                            <TextBlock Text="{Binding Description}" Margin="0,5,0,0" Foreground="#757575" TextWrapping="Wrap"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                <Image Source="/Resources/icon-calendar.png" Width="16" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding DueDate, StringFormat='Date: {0:dd MMM yyyy}'}"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <Button Content="✏️" ToolTip="Edit Task" Command="{Binding DataContext.EditTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"  CommandParameter="{Binding}"/>
                                            <Button Content="🗑️" Margin="10,0,0,0" ToolTip="Delete Task" Command="{Binding DataContext.DeleteTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <Border Grid.Column="1" Background="White" CornerRadius="4" Padding="15" Width="300" BorderThickness="1" BorderBrush="#E0E0E0">
                <StackPanel>
                    <TextBlock Text="New Task" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <TextBox Text="{Binding NewTitle, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" materialDesign:HintAssist.Hint="Name*"/>

                    <TextBox Text="{Binding NewDescription, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" MinHeight="80" Margin="0,0,0,10" materialDesign:HintAssist.Hint="Description"/>

                    <DatePicker SelectedDate="{Binding NewDueDate}" Margin="0,0,0,15" SelectedDateFormat="Short"/>

                    <Button Content="ADD TASK" HorizontalAlignment="Stretch" Padding="15,8" Command="{Binding AddTaskCommand}"/>

                    <Button Content="DELETE COMPLETED" Command="{Binding DeleteCompletedTasksCommand}"  Margin="0,20,0,0" HorizontalAlignment="Stretch" Padding="15,8"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
