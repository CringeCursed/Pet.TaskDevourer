<Window x:Class="Pet.TaskDevourer.TaskEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Edit task window" Height="600" Width="1000"
        Background="#F5F5F5">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="20">
            <StackPanel>


                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="📋" FontSize="20" Margin="0,0,10,0"/>
                    <TextBox materialDesign:TextFieldAssist.DecorationVisibility="Hidden" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" FontSize="24" FontWeight="Bold" Foreground="#333"/>
                </StackPanel>

                
                <StackPanel Margin="0,0,0,30">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="☰" FontSize="16" Margin="0,0,10,0" Foreground="#666"/>
                        <TextBlock Text="Description" FontSize="16" FontWeight="SemiBold" Foreground="#333"/>
                    </StackPanel>

                    <TextBox 
                        Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                             Background="#FAFAFA" BorderBrush="#E0E0E0" 
                             Padding="10" MinHeight="80" TextWrapping="Wrap"
                             VerticalContentAlignment="Top" FontSize="14"/>
                </StackPanel>

                
                <StackPanel Margin="0,0,0,30">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <CheckBox IsChecked="True" Margin="0,0,10,0"/>
                        <TextBlock Text="Sub-tasks" FontSize="16" FontWeight="SemiBold" Foreground="#333"/>
                    </StackPanel>

                    <Button Content="Add task" 
                            Background="Transparent" BorderThickness="0" 
                            HorizontalAlignment="Left" Foreground="#666"
                            FontSize="14" Cursor="Hand" Padding="0"/>
                </StackPanel>

                
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="☰" FontSize="16" Margin="0,0,10,0" Foreground="#666"/>
                        <TextBlock Text="Actions" FontSize="16" FontWeight="SemiBold" Foreground="#333"/>
                        <TextBlock Text="Show details" 
                                   HorizontalAlignment="Right" Margin="20,0,0,0"
                                   Foreground="#666" FontSize="12" TextDecorations="Underline" 
                                   Cursor="Hand"/>
                    </StackPanel>

                    <TextBox Text="Напишите комментарий..." 
                             Background="#FAFAFA" BorderBrush="#E0E0E0" 
                             Padding="10" MinHeight="60" TextWrapping="Wrap"
                             VerticalContentAlignment="Top" FontSize="14"
                             Foreground="#999"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        
        <Border Grid.Column="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="1,0,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="20">
                <StackPanel>

                    
                    <TextBlock Text="ADD TO CARD" 
                               FontSize="12" FontWeight="Bold" 
                               Foreground="#999" Margin="0,0,0,20"/>

                   
                    <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                            Padding="10" Margin="0,0,0,5" Background="Transparent">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👤" FontSize="14" Margin="0,0,10,0"/>
                            <TextBlock Text="Members" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    
                    <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                            Padding="10" Margin="0,0,0,5" Background="Transparent">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🏷️" FontSize="14" Margin="0,0,10,0"/>
                            <TextBlock Text="Tags" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <TextBlock Text="📅 Due time" FontSize="14" Margin="10,0,0,5"/>
                    <DatePicker SelectedDate="{Binding DueDate}" FontSize="14" Margin="0,0,0,15"/>

                    
                    <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                            Padding="10" Margin="0,0,0,20" Background="Transparent">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📎" FontSize="14" Margin="0,0,10,0"/>
                            <TextBlock Text="Attachments" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    
                    <Separator Margin="0,10,0,20" FontSize="12"/>

                    
                    <TextBlock Text="ACTIONS" 
                               FontSize="12" FontWeight="Bold" 
                               Foreground="#999" Margin="0,0,0,15"/>

                    
                    <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                            Padding="10" Margin="0,0,0,5" Background="Transparent">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📋" FontSize="14" Margin="0,0,10,0"/>
                            <TextBlock Text="Clone" FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                            Padding="10" Margin="0,0,0,5" Background="Transparent"
                            Command="{Binding SaveCommand}" >
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💾" FontSize="14" Margin="0,0,10,0" Foreground="#4CAF50"/>
                            <TextBlock Text="Save" FontSize="14" Foreground="#4CAF50"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                            Padding="10" Margin="0,0,0,5" Background="Transparent"
                            Command="{Binding CancelCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="❌" FontSize="14" Margin="0,0,10,0" Foreground="#E74C3C"/>
                            <TextBlock Text="Cancel" FontSize="14" Foreground="#E74C3C"/>
                        </StackPanel>
                    </Button>

                </StackPanel>
            </ScrollViewer>
        </Border>

    </Grid>
</Window>