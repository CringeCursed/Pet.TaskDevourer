<Window x:Class="Pet.TaskDevourer.TaskEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Style="{StaticResource MaterialDesignWindow}"
        Title="Edit task window"
        Height="600"
        Width="1000"
        Background="#F5F5F5">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>


        <ScrollViewer Grid.Column="0"
                      VerticalScrollBarVisibility="Auto"
                      Margin="20">
            <StackPanel>


                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,20"
                            VerticalAlignment="Center">
                    <TextBlock Text="📋"
                               FontSize="20"
                               Margin="0,0,10,0"/>
                    <TextBox
                        materialDesign:HintAssist.Hint="Title"
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                        FontSize="22"
                        FontWeight="SemiBold"
                        Foreground="#333"
                        MinWidth="300"/>
                </StackPanel>


                <StackPanel Margin="0,0,0,30">
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,15">
                        <TextBlock Text="☰"
                                   FontSize="16"
                                   Margin="0,0,10,0"
                                   Foreground="#666"/>
                        <TextBlock Text="Description"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#333"/>
                    </StackPanel>

                    <TextBox
                        materialDesign:HintAssist.Hint="Describe the task..."
                        Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                        Background="#FAFAFA"
                        BorderBrush="#E0E0E0"
                        Padding="10"
                        MinHeight="100"
                        TextWrapping="Wrap"
                        VerticalContentAlignment="Top"
                        FontSize="14"/>
                </StackPanel>


                <StackPanel Margin="0,0,0,30">
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,10"
                                VerticalAlignment="Center">
                        <CheckBox IsChecked="True"
                                  Margin="0,0,10,0"
                                  IsHitTestVisible="False"
                                  Focusable="False"/>
                        <TextBlock Text="Sub-tasks"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#333"/>
                        <StackPanel Orientation="Horizontal"
                                    Margin="4,0,0,0">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility"
                                            Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SubTasksTotalCount}"
                                                     Value="0">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <TextBlock Text=" ("
                                       Foreground="#666"/>
                            <TextBlock Text="{Binding SubTasksProgressText}"
                                       Foreground="#666"/>
                            <TextBlock Text=")"
                                       Foreground="#666"/>
                        </StackPanel>
                    </StackPanel>

                    <Grid Height="4"
                          Background="#EDE7F6"
                          Margin="0,0,0,8">
                        <Border Background="#673ab7"
                                HorizontalAlignment="Left">
                            <Border.Width>
                                <MultiBinding Converter="{StaticResource ProgressWidthConverter}">
                                    <Binding RelativeSource="{RelativeSource AncestorType=Grid}"
                                             Path="ActualWidth"/>
                                    <Binding Path="SubTasksCompletedCount"/>
                                    <Binding Path="SubTasksTotalCount"/>
                                </MultiBinding>
                            </Border.Width>
                        </Border>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility"
                                        Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SubTasksTotalCount}"
                                                 Value="0">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                    </Grid>

                    <ItemsControl ItemsSource="{Binding SubTasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="6"
                                        Background="#FFFFFF"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1"
                                        Padding="8"
                                        Margin="0,5,0,5">
                                    <DockPanel>
                                        <Button Content="🗑"
                                                DockPanel.Dock="Right"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="#999"
                                                Command="{Binding DataContext.RemoveSubTaskCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>
                                        <CheckBox IsChecked="{Binding IsCompleted, Mode=TwoWay}"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,8,0"/>
                                        <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                                                 MinWidth="200"
                                                 BorderThickness="0"
                                                 Background="Transparent"/>
                                    </DockPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button Content="Add sub-task"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Left"
                            Foreground="#666"
                            FontSize="14"
                            Cursor="Hand"
                            Padding="0"
                            Command="{Binding AddSubTaskCommand}"/>
                </StackPanel>


                <StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,15">
                        <TextBlock Text="☰"
                                   FontSize="16"
                                   Margin="0,0,10,0"
                                   Foreground="#666"/>
                        <TextBlock Text="Actions"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#333"/>
                        <TextBlock Text="Show details"
                                   HorizontalAlignment="Right"
                                   Margin="20,0,0,0"
                                   Foreground="#666"
                                   FontSize="12"
                                   TextDecorations="Underline"
                                   Cursor="Hand"/>
                    </StackPanel>

                    <TextBox materialDesign:HintAssist.Hint="Leave a comment..."
                             Text=""
                             Background="#FAFAFA"
                             BorderBrush="#E0E0E0"
                             Padding="10"
                             MinHeight="60"
                             TextWrapping="Wrap"
                             VerticalContentAlignment="Top"
                             FontSize="14"
                             Foreground="#555"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>


        <Border Grid.Column="1"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1,0,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Margin="20">
                <StackPanel>


                    <TextBlock Text="ADD TO CARD"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="#999"
                               Margin="0,0,0,20"/>


                    <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Padding="10"
                            Margin="0,0,0,5"
                            Background="Transparent">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👤"
                                       FontSize="14"
                                       Margin="0,0,10,0"/>
                            <TextBlock Text="Members"
                                       FontSize="14"/>
                        </StackPanel>
                    </Button>


                    <StackPanel Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,5">
                            <TextBlock Text="🏷️"
                                       FontSize="14"
                                       Margin="0,0,10,0"/>
                            <TextBlock Text="Tags"
                                       FontSize="14"/>
                        </StackPanel>
                        <WrapPanel>
                            <ItemsControl ItemsSource="{Binding Tags}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#E0E0E0"
                                                CornerRadius="12"
                                                Margin="0,0,6,6"
                                                Padding="8,4">
                                            <DockPanel>
                                                <Button Content="×"
                                                        DockPanel.Dock="Right"
                                                        Width="16"
                                                        Height="16"
                                                        Padding="0"
                                                        Margin="6,0,0,0"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Command="{Binding DataContext.RemoveTagCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"/>
                                                <TextBlock Text="{Binding}"/>
                                            </DockPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </WrapPanel>
                        <DockPanel Margin="0,5,0,0">
                            <TextBox Text="{Binding NewTag, UpdateSourceTrigger=PropertyChanged}"
                                     Width="180"
                                     materialDesign:HintAssist.Hint="New tag"/>
                            <Button Content="Add"
                                    DockPanel.Dock="Right"
                                    Margin="8,0,0,0"
                                    Command="{Binding AddTagCommand}"/>
                        </DockPanel>
                    </StackPanel>

                    <TextBlock Text="📅 Due time"
                               FontSize="14"
                               Margin="10,0,0,5"/>
                    <DatePicker SelectedDate="{Binding DueDate}"
                                FontSize="14"
                                Margin="0,0,0,15"/>


                    <StackPanel>
                        <!-- Attachments as action-style button -->
                        <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="10"
                                Margin="0,0,0,5"
                                Background="Transparent"
                                Command="{Binding AddAttachmentCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📎"
                                           FontSize="14"
                                           Margin="0,0,10,0"/>
                                <TextBlock Text="Add attachment"
                                           FontSize="14"/>
                            </StackPanel>
                        </Button>
                        <ItemsControl ItemsSource="{Binding Attachments}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel Margin="0,4,0,4">
                                        <StackPanel Orientation="Horizontal"
                                                    DockPanel.Dock="Right">
                                            <Button Content="💾"
                                                    ToolTip="Save as"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Foreground="#999"
                                                    Command="{Binding DataContext.SaveAttachmentAsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"/>
                                            <Button Content="🗑"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Foreground="#999"
                                                    Command="{Binding DataContext.RemoveAttachmentCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding FileName}"/>
                                            <TextBlock Text=" • "
                                                       Foreground="#999"/>
                                            <TextBlock Text="{Binding SizeBytes}"
                                                       Foreground="#999"/>
                                        </StackPanel>
                                    </DockPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <!-- Inline add/open row removed; covered by action button above -->
                    </StackPanel>


                    <Separator Margin="0,10,0,20"
                               FontSize="12"/>


                    <TextBlock Text="ACTIONS"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="#999"
                               Margin="0,0,0,15"/>


                    <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Padding="10"
                            Margin="0,0,0,5"
                            Background="Transparent"
                            Command="{Binding CloneCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📋"
                                       FontSize="14"
                                       Margin="0,0,10,0"/>
                            <TextBlock Text="Clone"
                                       FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Padding="10"
                            Margin="0,0,0,5"
                            Background="Transparent"
                            Command="{Binding SaveCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💾"
                                       FontSize="14"
                                       Margin="0,0,10,0"
                                       Foreground="#4CAF50"/>
                            <TextBlock Text="Save"
                                       FontSize="14"
                                       Foreground="#4CAF50"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Padding="10"
                            Margin="0,0,0,5"
                            Background="Transparent"
                            Command="{Binding CancelCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="❌"
                                       FontSize="14"
                                       Margin="0,0,10,0"
                                       Foreground="#E74C3C"/>
                            <TextBlock Text="Cancel"
                                       FontSize="14"
                                       Foreground="#E74C3C"/>
                        </StackPanel>
                    </Button>

                </StackPanel>
            </ScrollViewer>
        </Border>

    </Grid>
</Window>